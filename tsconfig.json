{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2019",
		"lib": ["es2019", "es2020", "es2022.error"],
		"outDir": "./dist/",
		"types": ["node"],
		"sourceMap": true,
		"removeComments": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"importHelpers": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"useUnknownInCatchVariables": false,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"strictNullChecks": true
	},
	"include": [
		"credentials/**/*",
		"nodes/**/*",
		"nodes/**/*.json",
		"package.json"
	],
	"exclude": ["node_modules/**/*", "dist/**/*"]
}
